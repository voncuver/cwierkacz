<cwierkacz-configuration>
	<processors-configuration>
		<!-- Preprocessors -->
		<processor>
			<name>CREDENTIALS-VALIDATION</name>
			<class>com.tguzik.cwierkacz.processing.preprocessor.credentials.CredentialsValidationProcessor</class>
		</processor>


		<!-- Postprocessors -->
		<processor>
			<name>EMAIL-NOTIFICATION</name>
			<class>com.tguzik.cwierkacz.processing.postprocessor.email.EmailNotificationProcessor</class>
			<properties>
				<entry>
					<string>smtpserver</string>
					<string>localhost</string>
				</entry>
				<entry>
					<string>smtpport</string>
					<string>12345</string>
				</entry>
				<entry>
					<string>smtplogin</string>
					<string>automation</string>
				</entry>
				<entry>
					<string>smtppassword</string>
					<string>password</string>
				</entry>
			</properties>
		</processor>
		<processor>
			<name>SAVE-ARTIFACTS</name>
			<class>com.tguzik.cwierkacz.processing.postprocessor.artifacts.ArtifactsProcessor</class>
		</processor>
		<processor>
			<name>SAVE-OPERATION-HISTORY</name>
			<class>com.tguzik.cwierkacz.processing.postprocessor.history.HistoryProcessor</class>
		</processor>


		<!-- Everything else -->
		<processor>
			<name>ACCOUNT-CREATION</name>
			<class>com.tguzik.cwierkacz.processing.processor.account.AccountCreatorProcessor</class>
		</processor>
		<processor>
			<name>ACCOUNT-MODIFICATION</name>
			<class>com.tguzik.cwierkacz.processing.processor.account.AccountModificationProcessor</class>
		</processor>
		<processor>
			<name>ACCOUNT-DELETION</name>
			<class>com.tguzik.cwierkacz.processing.processor.account.AccountDeletionProcessor</class>
		</processor>
		<processor>
			<name>TWEET-POSTER</name>
			<class>com.tguzik.cwierkacz.processing.processor.twitter.PosterProcessor</class>
		</processor>
		<processor>
			<name>TWEET-FETCHER</name>
			<class>com.tguzik.cwierkacz.processing.processor.twitter.FetcherProcessor</class>
		</processor>
	</processors-configuration>
</cwierkacz-configuration>